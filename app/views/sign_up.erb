<div class="center">
  <h1>  Sign up to peep!</h1>
  <br>
  <form action='/sign-up' method = 'post'>

      <label for='name'>
        Name: <input type='text' name='name' value='<%= params[:name] %>'>
      </label>
      <br>

      <label for='username'>
        Username: <input type='text' name='username' value='<%= params[:username] %>'>
      </label>
      <br>

      <label for='email'>
        Email: <input type='text' name='email' value='<%= params[:email] %>'>
      </label>
      <br>

      <label for='password'>
        Password: <input type='password' name='password' >
      </label>
      <br>

      <label for='password_confirmation'>
        Confirm password: <input type='password' name='password_confirmation'>
      </label>
      <br>
      <br>
      
    <button type='submit'>Sign up</button>
  </form>
</div>
